{
  "manifest_version": 3,
  "name": "YouTube SmartBlocker",
  "version": "1.0.0",
  "description": "Mejora tu experiencia en YouTube eliminando interrupciones publicitarias.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "YouTube SmartBlocker"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}